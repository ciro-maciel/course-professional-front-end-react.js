{
  "name": "monitor-website",
  "version": "1.27.0",
  "description": "mOnitor - downtime happens. Get notified!",
  "homepage": "http://monitor.ciro-maciel.me/",
  "repository": "https://github.com/cm-monitor/website.git",
  "license": "CC-BY-NC-SA-4.0",
  "private": true,
  "author": {
    "name": "Ciro Cesar Maciel",
    "email": "me@ciro-maciel.me"
  },
  "scripts": {
    "website:develop:run": "webpack serve --env=dev --config ./config/webpack.config.js",
    "website:build:prod": "webpack --env=prod --config ./config/webpack.config.js"
  },
  "dependencies": {
    "@ant-design/icons": "^4.5.0",
    "@ciro-maciel/utility": "^2.2.15",
    "antd": "^4.13.1",
    "jwt-decode": "^3.1.2",
    "moment": "^2.29.1",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet-async": "^1.0.9",
    "react-router-dom": "^5.2.0",
    "showdown": "^1.9.1",
    "use-http": "^1.0.18"
  },
  "devDependencies": {
    "@ciro-maciel/webpack-config": "^1.4.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "eslint": "^7.21.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "semantic-release": "^17.4.1"
  },
  "eslintIgnore": [
    "node_modules/*",
    "**/tests/**/*.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/jsx-props-no-spreading": "off",
      "react/require-default-props": "off",
      "react/forbid-prop-types": "off"
    }
  },
  "prettier": {
    "useTabs": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "printWidth": 120,
    "arrowParens": "always"
  },
  "release": {
    "branches": [
      "prod"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "www/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "www/CHANGELOG.md"
          ]
        }
      ]
    ],
    "preset": "angular"
  }
}
