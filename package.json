{
  "name": "monitor-website",
  "sideEffects": [
    "*.css"
  ],
  "version": "1.27.0",
  "description": "mOnitor - downtime happens. Get notified!",
  "homepage": "http://monitor.ciro-maciel.me/",
  "repository": "https://github.com/cm-monitor/website.git",
  "license": "CC-BY-NC-SA-4.0",
  "private": true,
  "author": {
    "name": "Ciro Cesar Maciel",
    "email": "me@ciro-maciel.me"
  },
  "scripts": {
    "website:develop:run": "webpack-dev-server --env.mode dev --config ./config/webpack.config.js",
    "website:build:prod": "webpack --env.mode prod --config ./config/webpack.config.js"
  },
  "dependencies": {
    "antd": "^4.13.0",
    "jwt-decode": "^3.1.2",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-helmet-async": "^1.0.4",
    "react-router-dom": "^5.2.0",
    "use-http": "^1.0.16"
  },
  "devDependencies": {
    "@babel/cli": "^7.12.8",
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.0.0",
    "@babel/plugin-proposal-decorators": "^7.0.0",
    "@babel/plugin-proposal-export-namespace-from": "^7.0.0",
    "@babel/plugin-proposal-function-sent": "^7.0.0",
    "@babel/plugin-proposal-json-strings": "^7.0.0",
    "@babel/plugin-proposal-numeric-separator": "^7.12.7",
    "@babel/plugin-proposal-throw-expressions": "^7.0.0",
    "@babel/plugin-syntax-dynamic-import": "^7.0.0",
    "@babel/plugin-syntax-import-meta": "^7.0.0",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/git": "^9.0.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-loader": "^8.2.2",
    "babel-plugin-import": "^1.13.3",
    "clean-webpack-plugin": "^0.1.19",
    "compression-webpack-plugin": "^7.1.2",
    "copy-webpack-plugin": "^7.0.0",
    "css-loader": "^3.4.0",
    "dotenv-webpack": "^4.0.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.2.0",
    "eslint-plugin-react": "^7.19.0",
    "eslint-plugin-react-hooks": "^1.7.0",
    "html-webpack-plugin": "^5.2.0",
    "image-minimizer-webpack-plugin": "^2.2.0",
    "imagemin-optipng": "^8.0.0",
    "imagemin-svgo": "^9.0.0",
    "prettier": "^1.19.1",
    "progress-bar-webpack-plugin": "^1.12.1",
    "semantic-release": "^17.3.0",
    "style-loader": "^1.1.2",
    "url-loader": "^2.2.0",
    "webpack": "^5.24.2",
    "webpack-bundle-analyzer": "^2.9.0",
    "webpack-cli": "^3.3.6",
    "webpack-dev-server": "^3.10.1",
    "webpack-merge": "^4.2.1"
  },
  "eslintIgnore": [
    "node_modules/*",
    "**/tests/**/*.js"
  ],
  "eslintConfig": {
    "extends": [
      "airbnb",
      "prettier"
    ],
    "plugins": [
      "prettier"
    ],
    "rules": {
      "react/jsx-filename-extension": [
        1,
        {
          "extensions": [
            ".js",
            ".jsx"
          ]
        }
      ],
      "react/jsx-props-no-spreading": "off",
      "react/require-default-props": "off",
      "react/forbid-prop-types": "off"
    }
  },
  "prettier": {
    "useTabs": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "jsxBracketSameLine": false,
    "printWidth": 120,
    "arrowParens": "always"
  },
  "release": {
    "branches": [
      "prod"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      "@semantic-release/github",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "www/CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "www/CHANGELOG.md"
          ]
        }
      ]
    ],
    "preset": "angular"
  }
}
